<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_list_fragment_tab"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_title_user"
        android:textSize="@dimen/text_size_title_user"
        android:textStyle="bold"
        android:fontFamily="serif"/>

    <com.google.android.material.tabs.TabLayout

        android:id="@+id/fragment_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B6C9F1"
        app:tabIndicatorColor="@color/design_default_color_on_primary"
        app:tabTextColor="#D4E0F8"
        app:tabSelectedTextColor="#fff"/>

    <androidx.viewpager.widget.ViewPager

        android:id="@+id/fragment_tab_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>